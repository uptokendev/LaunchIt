{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "includeFiles": "api/certs/**"
    }
  },
  "rewrites": [
    { "source": "/api/diagnostics-ui", "destination": "/api/diagnostics?ui=1" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
